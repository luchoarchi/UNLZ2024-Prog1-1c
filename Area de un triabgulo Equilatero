#include <iostream> 
#include <string>
#include<cmath>

using namespace std;

int main() { 
    
	float base = 0;
	double b;
	b = sqrt(3); 

    
       
    cout <<"Ingrese el valor la base: " << endl;
    cin >> base;
	
	
	float Area = (b/4)*(base*base) ;
	
	
	cout <<" El area  del triangulo es:"  << Area << endl;
    return 0;
} 
