#include <iostream> 
#include <string>
#include<cmath>

using namespace std;

int main() { 
    
	const float PI = 3.141592;
	float diametro = 0;
	

    
       
    cout <<"Ingrese el diametro del circulo: " << endl;
    cin >> diametro;
	
	
	float perimetro = PI*diametro;
	
	
	cout <<" El area  del circulo es:"  << perimetro << endl;
    return 0;
}
